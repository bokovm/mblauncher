<Window x:Class="MyWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MyWpfApp.ViewModels"
        xmlns:local="clr-namespace:MyWpfApp"
        Title="Лаунчер"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White"
        WindowState="{Binding WindowState, Mode=TwoWay}"
        Width="{Binding WindowWidth, Mode=TwoWay}"
        Height="{Binding WindowHeight, Mode=TwoWay}">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Стиль для кнопок управления -->
        <Style TargetType="Button" x:Key="ControlButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#20000000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для основных кнопок -->
        <Style TargetType="Button" x:Key="RoundedButtonStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Width" Value="170"/>
            <Setter Property="Height" Value="280"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightGray"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель управления -->
        <Border Grid.Row="0" 
                Background="#F0F0F0" 
                Padding="0,5"
                BorderBrush="#E0E0E0"
                BorderThickness="0,0,0,1"
                MouseLeftButtonDown="DragWindow_MouseDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Лаунчер" 
                         FontSize="18"
                         VerticalAlignment="Center"
                         Margin="15,0"
                         FontWeight="SemiBold"/>

                <StackPanel Orientation="Horizontal" 
                          Grid.Column="1"
                          HorizontalAlignment="Right"
                          Margin="0,0,10,0">
                    <Button Content="⚙" 
                          ToolTip="Настройки"
                          Command="{Binding OpenSettingsCommand}"
                          Style="{StaticResource ControlButtonStyle}"/>

                    <Button Content="⛶" 
                          ToolTip="Переключить режим окна"
                          Command="{Binding ToggleFullScreenCommand}"
                          Style="{StaticResource ControlButtonStyle}"/>

                    <Button Content="✖" 
                          ToolTip="Закрыть приложение"
                          Command="{Binding ExitCommand}"
                          Style="{StaticResource ControlButtonStyle}"
                          Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <ScrollViewer Grid.Row="1"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled">
            <Grid Margin="20,15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Content="Игры" 
                      Grid.Row="0" Grid.Column="0" 
                      Style="{StaticResource RoundedButtonStyle}"
                      Command="{Binding OpenGamesCommand}"/>

                <Button Content="Приложения" 
                      Grid.Row="0" Grid.Column="1" 
                      Style="{StaticResource RoundedButtonStyle}"
                      Command="{Binding OpenAppsCommand}"/>

                <Button Content="Браузеры" 
                      Grid.Row="0" Grid.Column="2" 
                      Style="{StaticResource RoundedButtonStyle}"
                      Command="{Binding OpenBrowsersCommand}"/>

                <Button Content="Другое" 
                      Grid.Row="0" Grid.Column="3" 
                      Style="{StaticResource RoundedButtonStyle}"
                      Command="{Binding OpenOtherCommand}"/>

                <Button Content="Видео" 
                      Grid.Row="2" Grid.Column="0" 
                      Style="{StaticResource RoundedButtonStyle}"
                      Command="{Binding OpenVideosCommand}"/>

                <Button Content="Музыка" 
                      Grid.Row="2" Grid.Column="1" 
                      Style="{StaticResource RoundedButtonStyle}"
                      Command="{Binding OpenMusicCommand}"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>