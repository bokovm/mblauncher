<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary x:Key="LightTheme">
        <Color x:Key="BackgroundColor">#FFFFFFFF</Color>
        <Color x:Key="ForegroundColor">#FF000000</Color>
        <Color x:Key="AccentColor">#FF0078D7</Color>
        <Color x:Key="BorderColor">#FFCCCCCC</Color>
    </ResourceDictionary>

    <ResourceDictionary x:Key="DarkTheme">
        <Color x:Key="BackgroundColor">#FF2D2D30</Color>
        <Color x:Key="ForegroundColor">#FFFFFFFF</Color>
        <Color x:Key="AccentColor">#FF569CD6</Color>
        <Color x:Key="BorderColor">#FF3F3F46</Color>
    </ResourceDictionary>

    <Style TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource BackgroundColor}" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource AccentColor}" />
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}" />
        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}" />
        <Setter Property="Padding" Value="10,5" />
        <Setter Property="Margin" Value="5" />
    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource ForegroundColor}" />
    </Style>
</ResourceDictionary>